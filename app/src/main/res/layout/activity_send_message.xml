<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Message.SendMessageActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sendmessage_goback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8.5dp"/>

            <TextView
                android:id="@+id/sendmessage_title"
                android:layout_toRightOf="@+id/sendmessage_goback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="쪽지 보내기"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:gravity="center_vertical"/>

            <Button
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:id="@+id/sendmessage_check"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:text="전송"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttonstyle4"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <EditText
        android:layout_below="@id/my_toolbar"
        android:id="@+id/sendmessage_edittext"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내용을 입력해주세요\n\n"
        android:textSize="15sp"
        android:background="@null"/>

    <LinearLayout
        android:layout_below="@+id/sendmessage_edittext"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080"/>

</RelativeLayout>